<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Settings"
        android:textSize="33px"

        android:tooltipText="uifwhsd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Calendar"
        android:textSize="33px"

        android:tooltipText="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"

        android:text="Today"
        android:textSize="33px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"

        android:backgroundTint="#776750b0"
        android:text="Week"
        android:textColor="#55FFFFFF"
        android:textSize="33px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />


    <LinearLayout
        android:id="@+id/linearLayoutMorning"
        android:layout_width="360dp"
        android:layout_height="150dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.246"
        app:layout_constraintHorizontal_bias="0.491"


        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"

            android:background="@drawable/rounded_corner_1_1">
            <TextView
                android:id="@+id/textViewMorning"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="Morning theme" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"

            android:background="@drawable/rounded_corner_1_2">


        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"

            android:background="@drawable/rounded_corner_1_3">
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"

            android:background="@drawable/rounded_corner_1_4">


            <ImageView
                android:id="@+id/imageViewSun"
                android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/sun"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutEvening"
        android:layout_width="360dp"
        android:layout_height="150dp"

        app:layout_constraintVertical_bias="0.519"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"

            android:background="@drawable/rounded_corner_2_1">
            <TextView
                android:id="@+id/textViewEvening"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:color="@color/white"
                android:textSize="20dp"
                android:text="Evening theme" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"

            android:background="@drawable/rounded_corner_2_2">


        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"

            android:background="@drawable/rounded_corner_2_3">
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"

            android:background="@drawable/rounded_corner_2_4">


            <ImageView
                android:id="@+id/imageViewMoon"
                android:layout_marginTop="55dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/moon"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="360dp"
        android:layout_height="150dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintVertical_bias="0.795"

        android:orientation="vertical">

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
