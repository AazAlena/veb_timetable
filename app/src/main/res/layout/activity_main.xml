<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayoutButton"
        android:layout_width="386dp"
        android:layout_height="60dp"
        android:background="@drawable/for_header"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.020">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="1dp"

            android:text="Settings"

            android:textColor="@color/white"
            android:textSize="33px"

            android:tooltipText="uifwhsd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.036" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="5dp"

            android:text="Calendar"

            android:textColor="@color/white"
            android:textSize="33px"

            android:tooltipText="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.343"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.036" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="5dp"

            android:text="Today"

            android:textColor="@color/white"
            android:textSize="33px"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.034" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="5dp"

            android:text="Week"

            android:textColor="@color/white"
            android:textSize="33px"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.033" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewLetsStart"
        android:layout_width="417dp"
        android:layout_height="109dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutMorning"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715"
        app:srcCompat="@drawable/letsstartplanning2" />

    <LinearLayout
        android:id="@+id/linearLayoutMorning"
        android:layout_width="350dp"
        android:layout_height="140dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.356"
        app:layout_constraintHorizontal_bias="0.491"


        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_1_1">

            <TextView
                android:id="@+id/textViewMorning"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Morning theme"
                 />
        </LinearLayout>



        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_1_2">


        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_1_dop">


            <Switch
                android:id="@+id/switchSun"
                android:layout_marginTop="55dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_1_3">
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_1_4">


            <ImageView
                android:id="@+id/imageViewSun"
                android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/sun"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutEvening"
        android:layout_width="350dp"
        android:layout_height="140dp"

        app:layout_constraintVertical_bias="0.650"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_2_1">
            <TextView
                android:id="@+id/textViewEvening"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Evening theme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_2_2">
        </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="140dp"

        android:background="@drawable/rounded_corner_2_dop">

        <Switch
            android:id="@+id/switchMoon"
            android:layout_marginTop="55dp"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:checked="false"
            android:text="" />
    </LinearLayout>




        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_2_3">
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="140dp"

            android:background="@drawable/rounded_corner_2_4">


            <ImageView
                android:id="@+id/imageViewMoon"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/moon"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="360dp"
        android:layout_height="140dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.94">

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
